build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  hs-source-dirs:
      src
  ghc-options: -Wall -O0 -Wno-unused-do-bind -Wno-name-shadowing
  build-depends:       base
                     , megaparsec
                     , text
                     , containers
                     , mtl
                     , bound
                     , deriving-compat
                     , llvm-hs
                     , llvm-hs-pure
                     , bytestring
                     , pretty-simple
  exposed-modules:
    Codegen
    Core
    Emit
    Interpreter
    Lower
    Parser
    Rename
    Typechecker
    Run
    Type
  other-modules:
executable scripter
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base
                     , text
                     , containers
                     , mtl
                     , scripter
                     , optparse-applicative
  -- hs-source-dirs:      
  ghc-options: -Wall -O0
  default-language:    Haskell2010
